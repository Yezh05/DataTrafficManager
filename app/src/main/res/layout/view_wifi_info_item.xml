<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="3dp"
              android:gravity="center">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="SSID名称" android:textColor="#CCCCCC"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" " android:id="@+id/TextViewWifiSSID"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="需要密码" android:textColor="#CCCCCC"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" " android:id="@+id/TextViewWifiIsLock"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:layout_weight="1">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text="占用信道" android:textColor="#CCCCCC"/>
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:text=" " android:id="@+id/TextViewWifiChannel"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
             android:id="@+id/TextViewWifiSignal" android:text="信号强度:"/>
    <ProgressBar android:layout_width="match_parent" android:layout_height="20dp" android:id="@+id/ProgressBarWifiSignal" android:max="100" android:min="0"
                 style="?android:attr/progressBarStyleHorizontal"/>
</LinearLayout>