<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720px"
    android:layout_height="wrap_content"
    android:padding="0dp"
    >
    <!--<TextView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/btn_shape2"
        android:gravity="right"
        android:text="" />-->
    <LinearLayout
        android:id="@+id/LinearLayoutMonitor"
        android:orientation="vertical"
        android:layout_width="720px"
        android:layout_height="540px"
        android:background="@drawable/btn_shape2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="0px"
                android:singleLine="true"
                android:textStyle="bold"
                android:text="应用流量监控"
                android:textSize="50px" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TextViewMonitorStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:gravity="right"
                    android:textColor="#4169E1"
                    android:text="停止监测"
                    android:textSize="30px" />
            <Switch
                android:id="@+id/SwitchInMonitor"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ImageViewMonitorAppIcon"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_marginRight="20px"/>
        <Spinner
            android:id="@+id/SpinnerMonitorChooseApp"
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px" />
        </LinearLayout>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="应用联网速度"
        android:textStyle="italic"
        android:textSize="30px"
        />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextViewMonitorAppTX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="上传:  -  byte/s"
                android:textSize="30px"
                />
            <TextView
                android:id="@+id/TextViewMonitorAppRX"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="下载:  -  byte/s"
                android:textSize="30px"
                />
        </LinearLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:id="@+id/LineChartMonitorAppChart"
            android:layout_width="match_parent"
            android:layout_height="200px"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextViewMonitorAppTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="监测时间:  -  "
                android:textSize="30px" />
            <TextView
                android:id="@+id/TextViewMonitorAppTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="传输总量:  -  bytes"
                android:textSize="30px"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>